<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lockbur.bieti.server.mapper.ApplicationMapper">

    <insert id="insert" parameterType="com.lockbur.bieti.server.domain.Application" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO tb_application
        (
          project_id,name,server,command,created_by,created_time,modified_time
        )
        VALUES
        (
          #{projectId},#{name},#{server},#{command},1,now(),now()
        )
    </insert>

    <select id="findAll" resultType="com.lockbur.bieti.server.domain.Application">
        SELECT
        id, project_id,name,server,command,created_by,created_time,modified_time
        FROM
        tb_application
    </select>

    <select id="findById" resultType="com.lockbur.bieti.server.domain.Application">
        SELECT
        id, project_id,name,server,command,created_by,created_time,modified_time
        FROM
        tb_application
        WHERE
        id=#{id}
        LIMIT 1
    </select>


    <update id="update" parameterType="com.lockbur.bieti.server.domain.Application">
        update tb_application
        <set>
            <if test="name != null">
                name=#{name},
            </if>
            <if test="server != null">
                server=#{server},
            </if>
            <if test="command != null">
                command=#{command},
            </if>
            modified_time=now()
        </set>
        where id=#{id}
    </update>

</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lockbur.bieti.server.mapper.InstanceMapper">

    <insert id="insert" parameterType="com.lockbur.bieti.server.domain.Instance" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO tb_instance
        (
           app_server_id,address,hostname,path,created_by,created_time,modified_time
        )
        VALUES
        (
          #{appServerId},#{address},#{hostname},#{path},1,now(),now()
        )
    </insert>

    <select id="findByAppServerId" resultType="com.lockbur.bieti.server.domain.Instance">
        SELECT
        id,app_server_id,address,hostname,path,created_by,created_time,modified_time
        FROM
        tb_instance
        WHERE
        app_server_id=#{appServerId}
    </select>


</mapper>
        <dependencies>

            <dependency>
                <groupId>com.lockbur.bieti</groupId>
                <artifactId>bieti-common</artifactId>
                <version>1.0.0</version>
            </dependency>


            <dependency>
                <groupId>org.slf4j</groupId>
